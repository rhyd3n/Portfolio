<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#B2DFDB"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="My Nanodegree Apps!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:text="This is a main page of the portfolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="SPOTIFY STREAMER"
            android:layout_weight="1"
            android:id="@+id/button"
            android:layout_marginRight="16dp"
            android:onClick="popMoviesApp"/>


        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="SCORES APP"
            android:layout_weight="1"
            android:id="@+id/button2"
            android:layout_marginRight="16dp"
            android:onClick="scoresApp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="LIBRARY APP"
            android:layout_weight="1"
            android:id="@+id/button3"
            android:onClick="libraryApp"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="BUILD IT BIGGER"
            android:id="@+id/button4"
            android:layout_marginRight="16dp"
            android:onClick="buildApp"/>

          <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="BACON READER"
            android:id="@+id/button5"
            android:layout_marginRight="16dp"
            android:onClick="baconReaderApp"/>

         <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_style2"
             android:textColor="#FFFFFF"
            android:text="CAPSTONE:MY OWN APP"
            android:id="@+id/button6"
            android:onClick="myAppToast"/>
    </LinearLayout>
</LinearLayout>