<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F5F5"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp">
         <ImageView
             android:id="@+id/dev_port"
             android:layout_width="150dp"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_alignParentLeft="true"
             android:src="@drawable/devvy"/>
         <TextView
                android:text="Nanodegree Apps!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:id="@+id/textView"
                android:layout_toRightOf="@id/dev_port"
                android:gravity="center_vertical"/>
        <TextView
            android:text="This is a main page of the portfolio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@id/dev_port"
            android:layout_below="@id/textView"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="POPULAR MOVIES"
        android:textSize="16sp"
        android:id="@+id/button"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:paddingLeft="16dp"
        android:layout_marginStart="72dp"
        android:background="@drawable/button_style"
        android:layout_marginBottom="8dp"
        android:onClick="popMoviesApp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="SCORES APP"
        android:layout_marginStart="72dp"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:paddingLeft="16dp"
        android:id="@+id/button2"
        android:background="@drawable/button_style"
        android:layout_marginBottom="8dp"
        android:onClick="scoresApp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="LIBRARY APP"
        android:textSize="16sp"
        android:id="@+id/button3"
        android:background="@drawable/button_style"
        android:layout_marginStart="72dp"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="libraryApp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button4"
        android:textSize="16sp"
        android:background="@drawable/button_style"
        android:layout_marginStart="72dp"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="buildApp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="BACON READER"
        android:textSize="16sp"
        android:id="@+id/button5"
        android:background="@drawable/button_style"
        android:layout_marginStart="72dp"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:paddingLeft="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="baconReaderApp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="CAPSTONE:MY OWN APP"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:id="@+id/button6"
        android:background="@drawable/button_style2"
        android:layout_marginStart="72dp"
        android:layout_gravity="center_vertical"
        android:textAlignment="viewStart"
        android:paddingLeft="16dp"
        android:layout_marginBottom="32dp"
        android:onClick="myAppToast"/>
</LinearLayout>
